{
  "name": "js-unity-snippets",
  "displayName": "unity-snippets",
  "description": "Snippets for Unity C# scripts",
  "version": "0.0.1",
  "repository": {"url": "https://github.com/JosephStar318/js-unity-snippets"},
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:ProjectSettings/ProjectVersion.txt"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "csharp",
        "path": "./snippets/unity.code-snippets"
      }
    ],
    "commands": [{
      "command": "js-unity-snippets.helloWorld",
      "title": "Hello World"
    }],
    "keybindings":[
      {
        "command": "unityAwareRename",
        "key": "F2",
        "when": "editorTextFocus && editorLangId == csharp"
      }
    ]

  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
